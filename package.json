{
  "name": "broadband",
  "version": "3.0.0-0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@agrc/dart-board": "^3.3.0",
    "@agrc/sherlock": "^2.2.4",
    "@arcgis/core": "^4.18.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "bootstrap": "^4.6.0",
    "downshift": "^6.1.0",
    "lodash.throttle": "^4.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-error-boundary": "^3.1.1",
    "react-scripts": "^4.0.3",
    "reactstrap": "^8.9.0",
    "web-vitals": "^1.1.1"
  },
  "scripts": {
    "build:prod": "env-cmd -e production react-scripts build",
    "build:stage": "env-cmd -e staging react-scripts build",
    "build": "env-cmd -e development react-scripts build",
    "cypress:open": "cypress open",
    "cypress:run": "npm start & wait-on http://localhost:3000 && cypress run",
    "deploy:prod": "wonkavision clean && wonkavision zip && env-cmd -e production wonkavision ship ./deploy/deploy.zip wwwroot/broadband && env-cmd -e production wonkavision unzip wwwroot/broadband",
    "deploy:stage": "wonkavision clean && wonkavision zip && env-cmd -e staging wonkavision ship ./deploy/deploy.zip wwwroot/broadband && env-cmd -e staging wonkavision unzip wwwroot/broadband",
    "eject": "react-scripts eject",
    "format": "prettier --write src --ignore-path ./.gitignore",
    "lint": "eslint src",
    "postinstall": "cp -R ./node_modules/@arcgis/core/assets ./public/assets",
    "release": "standard-version",
    "start": "env-cmd -e development react-scripts start",
    "start:no-env": "react-scripts start",
    "test": "react-scripts test"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier",
      "plugin:cypress/recommended"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@agrc/wonkavision": "^1.0.2",
    "@testing-library/cypress": "^7.0.4",
    "cypress": "^6.8.0",
    "env-cmd": "^10.1.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-react": "^7.22.0",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.1",
    "wait-on": "^5.3.0"
  }
}
